 	<!-- 이전글  -->
	<select id="pagePre" resultType="BoardDTO">
		SELECT 
			* 
		FROM 
			sample_board_tb
		WHERE 
			BOARD_IDX <![CDATA[<]]> #{boardIdx} AND BOARD_PUBLIC_FL = 'Y' 
		ORDER BY 
			BOARD_IDX DESC 
		LIMIT 
			1  
	</select>
	<!-- 다음글 -->
	<select id="pageNext" resultType="BoardDTO">
		SELECT 
			* 
		FROM 
			sample_board_tb
		WHERE 
			BOARD_IDX <![CDATA[>]]> #{boardIdx} AND BOARD_PUBLIC_FL = 'Y'
		ORDER BY 
			BOARD_IDX
		LIMIT 
			1  
	</select>
 
 	<select id="count" resultType="int">
 		SELECT
 			count(*) 
 		FROM
 			sample_board_tb
 	</select>
		
	<select id="pageList" resultType="BoardDTO">
		SELECT
			*
		FROM
			sample_board_tb
		WHERE 
			BOARD_IDX > 0
		<include refid="searchCondition"></include>	
		ORDER BY
			BOARD_IDX DESC
		LIMIT
			#{pageStart}, #{perPageNum}
	</select>
		<select id="getTotalCount" resultType="int">
		SELECT 
			COUNT(BOARD_IDX)
		FROM 
		 	sample_board_tb
		WHERE
			BOARD_IDX > 0
		<include refid="searchCondition"></include>
	</select>
	
	<sql id="searchCondition">
		<if test="searchType != null">
			<if test="searchType == 'c'.toString()">
				AND
					BOARD_CONTENTS LIKE CONCAT('%', #{keyword}, '%')
			</if>
			<if test="searchType == 'w'.toString()">
				AND
					BOARD_WRITER LIKE CONCAT('%', #{keyword}, '%')
			</if>
			<if test="searchType == 'all'.toString()">
				AND
					 BOARD_CONTENTS LIKE CONCAT('%', #{keyword}, '%')
						OR
					 BOARD_WRITER LIKE CONCAT('%', #{keyword}, '%')
					 	OR
					 BOARD_TITLE LIKE CONCAT('%', #{keyword}, '%')		
			</if>
		</if>
	</sql>
	
	
